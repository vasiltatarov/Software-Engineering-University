@{
    ViewData["Title"] = "Create Position";
}
<h1 class="text-center">Create Position</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Positions" asp-action="Create" method="post">
    <div class="form-group">
        <label for="positionName">Position EmployeItemName</label>
        <input type="text" class="form-control" id="positionName" placeholder="Position EmployeItemName..." name="positionEmployeItemName">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ">Create</button>
        <button asp-controller="Positions" asp-action="All" class="btn btn-success">Position list</button>
    </div>
</form>